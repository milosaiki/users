{% extends 'layout.html.twig' %}

{% block content %}
  <div class="container content">
    <div class="text-center search-term">
      <h2>Search: {{ search }}</h2>
    </div>
    <table class="table">
      <thead>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
      </thead>
      <tbody>
        {% for result in results %}
          <tr>
            <th>{{ result.id }}</th>
            <th>{{ result.name }}</th>
            <th>{{ result.email }}</th>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>  
{% endblock %}